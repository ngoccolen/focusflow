<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-padding: 5; -fx-background-color: #d9f6ff;" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FileBubbleRightController">
   <children>
      <HBox alignment="TOP_RIGHT" spacing="8" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <AnchorPane fx:id="chatBox" maxWidth="400" style="-fx-background-color: #96d2ff; -fx-background-radius: 10px;">
            <children>
               <HBox alignment="CENTER_LEFT" spacing="10" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                  <ImageView fx:id="downloadIcon" fitHeight="41.0" fitWidth="37.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/icons8-download-48.png" />
                     </image>
                  </ImageView>

                  <VBox spacing="4.0">
                     <Label fx:id="fileName" style="-fx-font-weight: bold; -fx-font-size: 13px;" wrapText="true" />
                     <Label fx:id="fileSize" style="-fx-font-size: 11px; -fx-text-fill: #666;" />
                  </VBox>
               </HBox>
            </children>
         </AnchorPane>
      </HBox>
   </children>
</AnchorPane>
