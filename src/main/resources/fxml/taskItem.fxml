      <AnchorPane fx:id="taskItemPane" layoutX="9.0" onMouseClicked="#handleSelect" prefHeight="53.0" prefWidth="372.0" style="-fx-border-color: #d1d1d1; -fx-background-radius: 15px; -fx-border-radius: 5px;">
         <children>
            <CheckBox fx:id="completeBox" layoutX="14.0" layoutY="10.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="346.0">
            
               <font>
