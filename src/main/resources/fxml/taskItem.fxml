            <ImageView fitHeight="18.0" fitWidth="21.0" layoutX="14.0" layoutY="37.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons8-calendar-24.png" />
               </image>
            </ImageView>
            <ImageView fx:id="alertIcon" fitHeight="34.0" fitWidth="44.0" layoutX="186.0" layoutY="28.0" pickOnBounds="true" preserveRatio="true" visible="false">
