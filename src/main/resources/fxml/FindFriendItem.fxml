<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="258.0" prefWidth="258.0"
	style="-fx-background-color: #ffffff; -fx-background-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 6, 0.05, 1, 1);"
	xmlns="http://javafx.com/javafx/21.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.FindFriendItemController">
	<children>
		<ImageView fx:id="avatarImage" fitHeight="157.0"
			fitWidth="173.0" layoutX="44.0" layoutY="14.0" pickOnBounds="true"
			preserveRatio="true">
		</ImageView>
		<Button fx:id="AddFriendButton" layoutX="14.0" layoutY="205.0"
			mnemonicParsing="false" onMouseClicked="#handleAddFriend"
			prefHeight="30.0" prefWidth="229.0"
			style="-fx-background-color: #FA8072; -fx-background-radius: 10px;"
			text="Add friend" textFill="WHITE">
			<font>
				<Font name="System Bold" size="15.0" />
			</font>
		</Button>
		<Label fx:id="nameLabel" layoutX="30.0" layoutY="171.0"
			prefHeight="27.0" prefWidth="200.0" style="-fx-alignment: center;">
			<font>
				<Font name="System Bold" size="18.0" />
			</font>
		</Label>

	</children>
</AnchorPane>
